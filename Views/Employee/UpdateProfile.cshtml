@using TaskManagement.Controllers
@model t_UpdateEmployee

<div class="container mt-5" style="border: 1px solid #ccc; width: 70%;padding:20px">
    <h3>Update Profile</h3>
    <form enctype="multipart/form-data" asp-controller="Employee" asp-action="UpdateProfile" method="post">
      @* <input type="hidden" id="empid" asp-for="c_empId" disabled> *@
        <div class="mt-3">
            <label class="control-label mt-1" for="name">Name:</label>
            <div class="mt-1">
                <input type="text" class="form-control" asp-for="c_empName" id="name" placeholder="Enter name">
            </div>
            <span class="text-danger" asp-validation-for="c_empName"></span>
        </div>
  
        <div class="mt-3">
            <label class="control-label mt-1" for="image">Image:</label>
            <div class="mt-1">
                <input type="file" class="form-control" asp-for="ProfileImage" id="Image">
            </div>
        </div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div id="responseMessage" class="mt-3">
            @ViewData["Message"]
        </div>
        <div id="responseMessage" class="mt-3">
           
                @TempData["Message"]
           
        </div>
        <div class="mt-3"> 
            <div class="mt-1">
                <button type="submit" class="btn btn-primary" id="register">Update</button>

            </div>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

