@using TaskManagement.Controllers
@model t_Employee

<div class="container mt-5" style="border: 1px solid #ccc; width: 70%;padding:20px">
    <h3>Register</h3>
    <form enctype="multipart/form-data" asp-controller="Employee" asp-action="Register" method="post">
        <div class="mt-3">
            <label class="control-label mt-1" for="name">Name:</label>
            <div class="mt-1">
                <input type="text" class="form-control" asp-for="c_empName" id="name" placeholder="Enter name">
            </div>
            <span class="text-danger" asp-validation-for="c_empName"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="email">Email:</label>
            <div class="mt-1">
                <input type="email" class="form-control" asp-for="c_empEmail" id="email" placeholder="Enter email">
            </div>
            <span class="text-danger" asp-validation-for="c_empEmail"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="pwd">Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="c_empPassword" id="pwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="c_empPassword"></span>
        </div>
  
        <div class="mt-3">
            <label class="control-label mt-1" for="image">Image:</label>
            <div class="mt-1">
                <input type="file" class="form-control" asp-for="ProfileImage" id="Image">
            </div>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div id="responseMessage" class="mt-3">
            @ViewData["Message"]
        </div>
        <div id="responseMessage" class="mt-3">
           
                @TempData["Message"]
           
        </div>
        <div class="mt-3"> 
            <div class="mt-1">
                <button type="submit" class="btn btn-primary" id="register">Register</button>

            </div>
        </div>
    </form>
    <p class="m-3">Already have an account? <a href="/Employee/Login">Login</a></p>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

