@model vm_Login

<div class="container mt-5" style="border: 1px solid #ccc; width: 70%;padding:20px">
    <h3>Login</h3>
    <br />
    <form asp-controller="Employee" asp-action="Login" method="post">
        <div class="mt-3">
            <label class="control-label mt-1" for="email">Email:</label>
            <div class="mt-1">
                <input type="email" class="form-control" asp-for="c_empEmail" id="email" placeholder="Enter email">
            </div>
            <span class="text-danger" asp-validation-for="c_empEmail"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="pwd">Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="c_empPassword" id="pwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="c_empPassword"></span>
        </div>
        <div id="responseMessage" class="mt-3">
            <div class="alert @(ViewData["Message"] != null ? "alert-danger" : "" )">
                @ViewData["Message"]
            </div>
        </div>
        <div class="mt-3">
            <div class="mt-1">
                <button type="submit" id="login" class="btn btn-primary">Login</button>
            </div>
        </div>
        <p class="m-3">Do'nt have an account? <a href="/Employee/Register">Register</a></p>
    </form>

</div>